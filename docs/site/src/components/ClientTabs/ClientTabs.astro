---
import { ClientTabs } from "./ClientTabs";
import SetupPython from "./setup-python.md";
import SetupTypescript from "./setup-typescript.md";
const { includeSetup = true } = Astro.props;
---

<ClientTabs client:idle>
    {includeSetup && <SetupPython slot="setup-python" />}
    {includeSetup && <SetupTypescript slot="setup-typescript" />}
    <Fragment slot="python">
        <slot name="python" />
    </Fragment>
    <Fragment slot="typescript">
        <slot name="typescript" />
    </Fragment>
</ClientTabs>
